// }

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
    id       String @id @default(uuid())
    username String @unique
    password String
}

model Tutor {
    id         String @id @default(uuid())
    name       String
    experience String
    about      String
    photo      String
}

model Application {
    id    String @id @default(uuid())
    name  String
    phone String
}

model Review {
    id       String @id @default(uuid())
    name     String
    text     String
    approved String @default("Pending approval")
}

model Screenshot {
    id    String @id @default(uuid())
    photo String
}
