// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(uuid())
    username String @unique
    password String
}

model Tutor {
    id         String @id @default(uuid())
    name       String
    experience String
    about      String
    photo      String
}

model Application {
    id    String @id @default(uuid())
    name  String
    phone String
}

model Review {
    id       String @id @default(uuid())
    name     String
    text     String
    approved String @default("Pending approval")
}

model Screenshot {
    id    String @id @default(uuid())
    photo String
}
